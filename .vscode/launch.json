    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch LTBus_VLink",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/main.go",
            "console": "integratedTerminal",
            "args": [
                "--device_id",
                "0x5001",
                "--device_port",
                "/dev/ttyACM0",
                "--packet_size",
                "24",
                "--debug"
            ],
        }
    ]
}